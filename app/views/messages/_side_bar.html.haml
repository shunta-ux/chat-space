.side_bar
  .side_bar__user_name
    .left_header
      %p.left_header__account_name
        = current_user.name
      %ul.left_header__icon_list
        %li.left_header__icon
          = link_to new_group_path, class: "icon__logo" do
            = icon('far', 'edit')
        %li.left_header__icon
          = link_to edit_user_path(current_user), class: "icon__logo" do
            = icon('fas', 'cog')
  .side_bar__grouplist
    - current_user.groups.each do |group|
      .group_info
        = link_to group_messages_path(group), class: "color_adjustment" do  
          .group_name
            = group.name
          .group_status
            = group.show_last_message
